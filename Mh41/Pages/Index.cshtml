@section Scripts {
    <script>
        // Hero Slider Functionality
        const slides = [
            { type: 'image', src: '/assets/car-banner.jpg', alt: 'Car Banner' },
            { type: 'image', src: '/assets/car-wash.png', alt: 'Car Wash' },
            { type: 'garage', src: '/assets/garagebanner.jpg', alt: 'Garage Service Banner' }
        ];
        let current = 0;
        const img = document.getElementById('hero-image');
        const overlay = document.getElementById('hero-garage-overlay');
        const nextBtn = document.getElementById('hero-next');

        function renderSlide() {
            const s = slides[current];
            img.src = s.src;
            img.alt = s.alt;
            overlay.classList.toggle('hidden', s.type !== 'garage');
            // dots
            for (let i = 0; i < slides.length; i++) {
                const dot = document.getElementById(`dot-${i}`);
                dot.className = 'w-2 h-2 rounded-full ' + (i === current ? 'bg-white' : 'bg-white/40');
            }
        }
        nextBtn.addEventListener('click', () => { current = (current + 1) % slides.length; renderSlide(); });
        setInterval(() => { current = (current + 1) % slides.length; renderSlide(); }, 3000);
        renderSlide();
    </script>
    <style>
        @@keyframes shine-move {
            0% { transform: translateX(-100%); }
            60%,100% { transform: translateX(120%); }
        }
    </style>
}
